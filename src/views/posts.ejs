<%- include("partials/header") -%>
    <header class="d-flex justify-content-center 	text-bg-dark p-3">
        <h1 >FORO</h1>
    </header>
<main class="d-flex-flex-column align-items-center  ">

  <div class="d-grid gap-2 col-6 mx-auto p-3 mb-2 "  >
    <button class="btn btn-dark " type="button" id="btn-new">Nuevo Post</button>
  </div>

    <div class="container text-center" >
        <div class="row" id="container-row">

          <% posts.forEach(post => { %>


          <article class="col-4" data-id="<%= post.id %>">
            <div class="card p-3 bg-dark p-3 border border-black ">
              
              <h4 class="card-title d-flex p-2 text-bg-light p-3 border border-black"><%= post.title %></h4>
              <p class="card-text d-flex p-2 text-bg-light p-3 border border-black"><%= post.content %></p>
            <img src="<%= post.imageUrl %>">
            <div class="card-body">
                <div>
                <button class="btn btn-outline-light" id="btn-edit">editar</button>
                <button type="" class="btn btn-outline-danger d-flex justify-content-start" id="btn-elim">eliminar</button>
                </div>
                
            </div>
            </div>
        </article>

  



         <% }) %>
        </div>
      </div>


<div class="modal fade " id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Foro</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="formulario">
          <div class="mb-3">
            <label for="inputtitulo" class="col-form-label">Titulo</label>
            <input type="text" class="form-control" id="inputtitulo">
          </div>
          <div class="mb-3">
            <label for="inputcontenido" class="col-form-label">Contenido</label>
            <input type="text" class="form-control" id="inputcontenido">
          </div>
          <div class="mb-3">
            <label for="inputimagenurl" class="col-form-label">ImagenUrl</label>
            <input type="url" class="form-control" id="inputimagenurl">
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
            <button type="submit" class="btn btn-primary" id="btn-save">Publicar Post</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
</main>

<%- include("partials/footer") -%>

